<form>
    <formOptions>
        <useToken>true</useToken>
        <!--<method>post</method>-->
        <enableAjaxValidation>false</enableAjaxValidation>
        <enableClientScript>true</enableClientScript>
        <validateOnChange>false</validateOnChange>
        <enctype>application/x-www-form-urlencoded</enctype>
        <!--<enctype>multipart/form-data</enctype>-->
        <formSubmitAction>RequestPasswordResetAction::run</formSubmitAction>
    </formOptions>
    <formItems>

        <item>
            <title>Password</title>
            <name>password</name>
            <type>passwordInput</type>
            <validation>
                <rule>required</rule>
                <rule min="6">string</rule>
            </validation>
        </item>

    </formItems>
</form>
